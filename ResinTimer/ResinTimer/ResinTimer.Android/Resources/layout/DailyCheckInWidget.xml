<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15px"
    android:gravity="center_horizontal"
    android:background="@drawable/rounded_background"
    android:id="@+id/DailyCheckInWidgetRootLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/DailyCheckInWidgetTitle"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DailyCheckInWidgetGenshinStatusLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:layout_gravity="fill"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/DailyCheckInWidgetGenshinStatusTitle"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_gravity="center"
            android:id="@+id/DailyCheckInWidgetGenshinStatusIcon"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DailyCheckInWidgetHonkai3rdStatusLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:layout_gravity="fill"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/DailyCheckInWidgetHonkai3rdStatusTitle"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_gravity="center"
            android:id="@+id/DailyCheckInWidgetHonkai3rdStatusIcon"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DailyCheckInWidgetHonkaiStarRailStatusLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:layout_gravity="fill"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/DailyCheckInWidgetHonkaiStarRailStatusTitle"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_gravity="center"
            android:id="@+id/DailyCheckInWidgetHonkaiStarRailStatusIcon"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DailyCheckInWidgetZenlessZoneZeroStatusLayout">
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:layout_gravity="fill"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/DailyCheckInWidgetZenlessZoneZeroStatusTitle"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_gravity="center"
            android:id="@+id/DailyCheckInWidgetZenlessZoneZeroStatusIcon"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_outline"
        android:id="@+id/DailyCheckInWidgetCheckInButton"/>
</LinearLayout>
