<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:local="clr-namespace:ResinTimer"
                  xmlns:resources="clr-namespace:ResinTimer.Resources"
                  x:Class="ResinTimer.MainPage"
                  MasterBehavior="Popover">

    <MasterDetailPage.Master>
        <ContentPage Padding="0,40,0,0" IconImageSource="resintimer_icon.png" Title="Resin Timer">
            <StackLayout>
                <ListView x:Name="MainListView"
                          ItemSelected="MainListView_ItemSelected">
                    <ListView.ItemsSource>
                        <x:Array Type="{x:Type local:MainMasterItem}">
                            <local:MainMasterItem Title="{x:Static resources:AppResources.MasterDetail_MasterList_Resin}" Icon="resin.png" Target="{x:Type local:ResinTimerPage}"/>
                            <local:MainMasterItem Title="{x:Static resources:AppResources.MasterDetail_MasterList_Expedition}" Icon="compass.png" Target="{x:Type local:ExpeditionTimerPage}"/>
                            <local:MainMasterItem Title="{x:Static resources:AppResources.MasterDetail_MasterList_Chunk}" Icon="chunk.png" Target="{x:Type local:GatheringItemTimerPage}"/>
                            <local:MainMasterItem Title="{x:Static resources:AppResources.MasterDetail_MasterList_AppInfo}" Target="{x:Type local:InfoPage}" />
                            <local:MainMasterItem Title="{x:Static resources:AppResources.MasterDetail_MasterList_Settings}" Target="{x:Type local:SettingPage}" />
                        </x:Array>
                    </ListView.ItemsSource>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="5,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding Icon}" />
                                    <Label Grid.Column="1" 
                                           Text="{Binding Title}" HorizontalTextAlignment="Center" FontSize="Subtitle" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

</MasterDetailPage>
