<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:ResinTimer.Resources"
             x:Class="ResinTimer.Pages.AccountSyncPages.TimerSyncConfigPage"
             Title="{x:Static resources:AppResources.TimerSyncConfigPage_Title}">

    <TableView Intent="Settings">
        <TableRoot>
            <TableSection Title="{x:Static resources:AppResources.TimerSyncConfig_ConfigSection_Title}">
                <SwitchCell x:Name="SyncConfigDailyMission" OnColor="#0682F6"
                            Text="{x:Static resources:AppResources.HomeItem_DailyMission}" />
                
                <SwitchCell x:Name="SyncConfigResin" OnColor="#0682F6"
                            Text="{x:Static resources:AppResources.MasterDetail_MasterList_Resin}" />
                
                <SwitchCell x:Name="SyncConfigRealmCurrency" OnColor="#0682F6"
                            Text="{x:Static resources:AppResources.MasterDetail_MasterList_RealmCurrency}" />
                
                <SwitchCell x:Name="SyncConfigExpedition" OnColor="#0682F6"
                            Text="{x:Static resources:AppResources.MasterDetail_MasterList_Expedition}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>