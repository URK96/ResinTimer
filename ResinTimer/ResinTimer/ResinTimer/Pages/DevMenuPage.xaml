<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ResinTimer.Pages.DevMenuPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <TableView Intent="Settings">
        <TableRoot>
            <TableSection Title="Notification Test">
                <ViewCell x:Name="TestExpeditionSyncItemNoti"
                          Tapped="TestExpeditionSyncItemNoti_Tapped">
                    <StackLayout Padding="{OnPlatform Default='15, 0, 20, 0',
                                                      UWP='0, 10, 100, 10'}"
                                 Orientation="Horizontal">
                        <Label FontAttributes="{OnPlatform UWP=Bold}"
                               Text="Test Expedition Sync Item Notification (1 min)"
                               VerticalTextAlignment="Center" />

                        <Label HorizontalOptions="EndAndExpand"
                               Text="▶"
                               VerticalTextAlignment="Center" />
                    </StackLayout>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>